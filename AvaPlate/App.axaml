<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaPlate.App"
             xmlns:local="using:AvaPlate"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Resources>
        <FontFamily x:Key="LxgwWenKaiBold">avares://AvaloniaApp/Assets/Fonts/LXGWWenKai-Bold.ttf</FontFamily>
        <FontFamily x:Key="LxgwWenKaiLight">avares://AvaloniaApp/Assets/Fonts/LXGWWenKai-Light.ttf</FontFamily>
        <FontFamily x:Key="LxgwWenKaiRegular">avares://AvaloniaApp/Assets/Fonts/LXGWWenKai-Regular.ttf</FontFamily>
    </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="{StaticResource LxgwWenKaiBold}" />
        </Style>
    </Application.Styles>
</Application>